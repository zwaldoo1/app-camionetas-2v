let camionetas = [];

// Obtener las camionetas en el servidor
async function fetchCamionetas() {
  try {
    const response = await fetch('http://localhost:5000/api/camionetas');
    if (!response.ok) {
      throw new Error('Error al obtener las camionetas');
    }
    camionetas = await response.json();
  } catch (error) {
    console.error(error);
    camionetas = [];
  }
}

// Llamamos a la funci√≥n para obtener las camionetas
await fetchCamionetas();
